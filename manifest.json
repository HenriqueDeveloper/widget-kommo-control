{
  "widget": {
    "name": "Alpha Control",
    "description": "Widget para controle de menus e inserção de CSS/JS personalizados.",
    "short_description": "Controle de menus + CSS/JS",
    "version": "1.0.0",
    "interface_version": 2,
    "init_once": false,
    "locale": [
      "pt"
    ],
    "installation": true,
    "support": {
      "link": "https://henriquedeveloper.github.io/widget-control-alpha/",
      "email": ""
    }
  },

  "locations": [
    "settings",
    "everywhere"
  ],

  "settings": {
    "fields": [
      {
        "key": "blockedMenus",
        "name": "Menus Bloqueados",
        "type": "multiselect",
        "options": [
          { "value": "start", "label": "Início" },
          { "value": "whatsapp", "label": "WhatsApp" }
        ]
      },
      {
        "key": "customCSS",
        "name": "CSS Personalizado",
        "type": "textarea"
      },
      {
        "key": "customJS",
        "name": "JS Personalizado",
        "type": "textarea"
      }
    ]
  },

  "permissions": [
    "settings",
    "account_current"
  ]
}
